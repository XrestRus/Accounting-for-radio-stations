{% extends 'base.html.twig' %}

{% block title %}Учет радиостанций - Настройки{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Настройки</h1>
</div>

<div class="row">
    <div class="col-md-3">
        <div class="card mb-4">
            <div class="card-body p-0">
                <div class="list-group settings-nav">
                    <a href="#general" class="list-group-item list-group-item-action active" data-bs-toggle="list">
                        <i class="bi bi-sliders"></i> Общие настройки
                    </a>
                    <a href="#users" class="list-group-item list-group-item-action" data-bs-toggle="list">
                        <i class="bi bi-people"></i> Пользователи
                    </a>
                    <a href="#devices" class="list-group-item list-group-item-action" data-bs-toggle="list">
                        <i class="bi bi-device-hdd"></i> Типы устройств
                    </a>
                    <a href="#departments" class="list-group-item list-group-item-action" data-bs-toggle="list">
                        <i class="bi bi-building"></i> Подразделения
                    </a>
                    <a href="#positions" class="list-group-item list-group-item-action" data-bs-toggle="list">
                        <i class="bi bi-person-badge"></i> Должности
                    </a>
                    <a href="#notifications" class="list-group-item list-group-item-action" data-bs-toggle="list">
                        <i class="bi bi-bell"></i> Уведомления
                    </a>
                    <a href="#backup" class="list-group-item list-group-item-action" data-bs-toggle="list">
                        <i class="bi bi-cloud-arrow-up"></i> Резервное копирование
                    </a>
                    <a href="#logs" class="list-group-item list-group-item-action" data-bs-toggle="list">
                        <i class="bi bi-file-text"></i> Журналы системы
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-9">
        <div class="tab-content">
            <!-- Общие настройки -->
            <div class="tab-pane fade show active" id="general">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Общие настройки</h5>
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="mb-3">
                                <label for="companyName" class="form-label">Название организации</label>
                                <input type="text" class="form-control" id="companyName" value="ОАО РЖД">
                            </div>
                            <div class="mb-3">
                                <label for="departmentName" class="form-label">Название подразделения</label>
                                <input type="text" class="form-control" id="departmentName" value="Локомотивное депо">
                            </div>
                            <div class="mb-3">
                                <label for="defaultReturnPeriod" class="form-label">Срок возврата по умолчанию (дней)</label>
                                <input type="number" class="form-control" id="defaultReturnPeriod" value="7">
                            </div>
                            <div class="mb-3">
                                <label for="language" class="form-label">Язык интерфейса</label>
                                <select class="form-select" id="language">
                                    <option value="ru" selected>Русский</option>
                                    <option value="en">English</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="dateFormat" class="form-label">Формат даты</label>
                                <select class="form-select" id="dateFormat">
                                    <option value="dd.mm.yyyy" selected>ДД.ММ.ГГГГ</option>
                                    <option value="mm.dd.yyyy">ММ.ДД.ГГГГ</option>
                                    <option value="yyyy-mm-dd">ГГГГ-ММ-ДД</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="timeFormat" class="form-label">Формат времени</label>
                                <select class="form-select" id="timeFormat">
                                    <option value="24h" selected>24-часовой (14:30)</option>
                                    <option value="12h">12-часовой (2:30 PM)</option>
                                </select>
                            </div>
                            <div class="mb-3 form-check">
                                <input type="checkbox" class="form-check-input" id="enableNotifications" checked>
                                <label class="form-check-label" for="enableNotifications">Включить уведомления</label>
                            </div>
                            <div class="mb-3 form-check">
                                <input type="checkbox" class="form-check-input" id="enableEmailNotifications">
                                <label class="form-check-label" for="enableEmailNotifications">Отправлять уведомления по электронной почте</label>
                            </div>
                            <button type="submit" class="btn btn-primary">Сохранить изменения</button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Пользователи -->
            <div class="tab-pane fade" id="users">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Пользователи системы</h5>
                        <button type="button" class="btn btn-primary btn-sm">
                            <i class="bi bi-plus"></i> Добавить пользователя
                        </button>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Имя пользователя</th>
                                        <th>Роль</th>
                                        <th>Email</th>
                                        <th>Статус</th>
                                        <th>Последний вход</th>
                                        <th>Действия</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>admin</td>
                                        <td>Администратор</td>
                                        <td>admin@example.com</td>
                                        <td><span class="badge bg-success">Активен</span></td>
                                        <td>05.10.2023 10:15</td>
                                        <td>
                                            <button type="button" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <button type="button" class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>operator</td>
                                        <td>Оператор</td>
                                        <td>operator@example.com</td>
                                        <td><span class="badge bg-success">Активен</span></td>
                                        <td>05.10.2023 09:30</td>
                                        <td>
                                            <button type="button" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <button type="button" class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>manager</td>
                                        <td>Менеджер</td>
                                        <td>manager@example.com</td>
                                        <td><span class="badge bg-success">Активен</span></td>
                                        <td>04.10.2023 16:45</td>
                                        <td>
                                            <button type="button" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <button type="button" class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>viewer</td>
                                        <td>Наблюдатель</td>
                                        <td>viewer@example.com</td>
                                        <td><span class="badge bg-secondary">Неактивен</span></td>
                                        <td>01.10.2023 11:20</td>
                                        <td>
                                            <button type="button" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <button type="button" class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Другие вкладки настроек -->
            <div class="tab-pane fade" id="devices">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Типы устройств</h5>
                    </div>
                    <div class="card-body">
                        <p>Здесь будут настройки типов устройств.</p>
                    </div>
                </div>
            </div>

            <div class="tab-pane fade" id="departments">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Подразделения</h5>
                    </div>
                    <div class="card-body">
                        <p>Здесь будут настройки подразделений.</p>
                    </div>
                </div>
            </div>

            <div class="tab-pane fade" id="positions">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Должности</h5>
                    </div>
                    <div class="card-body">
                        <p>Здесь будут настройки должностей.</p>
                    </div>
                </div>
            </div>

            <div class="tab-pane fade" id="notifications">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Уведомления</h5>
                    </div>
                    <div class="card-body">
                        <p>Здесь будут настройки уведомлений.</p>
                    </div>
                </div>
            </div>

            <div class="tab-pane fade" id="backup">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Резервное копирование</h5>
                    </div>
                    <div class="card-body">
                        <p>Здесь будут настройки резервного копирования.</p>
                    </div>
                </div>
            </div>

            <div class="tab-pane fade" id="logs">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Журналы системы</h5>
                    </div>
                    <div class="card-body">
                        <p>Здесь будут журналы системы.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Инициализация работы вкладок Bootstrap
        var triggerTabList = [].slice.call(document.querySelectorAll('.settings-nav a'));
        triggerTabList.forEach(function(triggerEl) {
            var tabTrigger = new bootstrap.Tab(triggerEl);
            
            triggerEl.addEventListener('click', function(event) {
                event.preventDefault();
                tabTrigger.show();
            });
        });
    });
</script>
{% endblock %}
